# Backend Environment Variables for Production

# Server Configuration
PORT=5000
NODE_ENV=production

# AI Services
GEMINI_API_KEY=your_gemini_api_key
OPENROUTER_API_KEY=your_openrouter_api_key
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ONDEMAND_API_KEY=your_ondemand_api_key

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Custom Token System
TOKEN_SECRET=your-secure-token-secret-key

# Auth0 Configuration (Optional)
AUTH0_SECRET=your_auth0_secret
AUTH0_BASE_URL=https://your-backend.vercel.app
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com

# Frontend URL (⚠️ IMPORTANT: Update this after deploying frontend to Netlify)
FRONTEND_URL=https://your-frontend.netlify.app
